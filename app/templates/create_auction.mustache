{{> partials/_header}}

  {{#auction}}
    <div class="row js-new-auction">
      <div class="large-12 columns">
        <form action="/auction" method="POST" enctype="multipart/form-data">
          Take a Photo
          <div id="js-canvas-holder" class="canvas_holder_hidden">
            <canvas id="js-canvas" class="large-12 columns"> </canvas>
          </div>
          <input class="js-item-photo-input" type="file" required="required" name="item_photo" accept="image/*" capture="camera">

          Item Name
          <input type="text" placeholder="TV Stand" required="required" name="auction_name">

          Starting Bid
          <div class="row collapse">
            <div class="small-1 columns">
              <span class="prefix">$</span>
            </div>
            <div class="small-11 columns">
              <input type="number" min="1" class="medium-11 columns"  placeholder="10" required="required" name="start_bid">
            </div>
          </div>
          Increments
          <div class="row collapse">
            <div class="small-1 columns">
              <span class="prefix">$</span>
            </div>
            <div class="small-11 columns">
              <input type="number" min="1" class="medium-11 columns" required="required" placeholder="5" name="step">
            </div>
          </div>
          Email
          {{^logged_in}}
            <input type="email" placeholder="your@email.com" required="required" name="user_email">
          {{/logged_in}}
          End date <input type="time" name="end_date" required="required">
          <input type="submit" class="button postfix" value="Start Auction">
        </form>
      </div>
    </div>
  {{/auction}}

<script data-main="scripts/main" src="/js/create_auction.min.js"></script>
{{> partials/_footer}}
