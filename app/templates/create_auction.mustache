{{> partials/_header}}

  {{#auction}}
    <div class="row js-new-auction">
      <div class="large-12 columns">
        <form action="/auction" method="POST" enctype="multipart/form-data" id="new-auction-form">
          {{^step_2}}
            {{^step_3}}
              Take a Photo
              <input class="js-item-photo-input" type="file" name="item_photo" accept="image/*" capture="camera">
            {{/step_3}}
          {{/step_2}}

          {{#step_2}}
            {{#image}}
              <div class="component">
                <div class="overlay">
                  <div class="overlay-inner">
                  </div>
                </div>
                <div class="resize-container">
                  <span class="resize-handle resize-handle-ne"></span>
                  <span class="resize-handle resize-handle-nw"></span>
                  <img id="js-resizable-image" class="js-resizable-image" src="{{image}}" title="{{{image_name}}}" />
                  <span class="resize-handle resize-handle-se"></span>
                  <span class="resize-handle resize-handle-sw"></span>
                </div>
                <br>
                <a class="btn-crop js-crop">Crop <img class="icon-crop" src="../assets/crop.svg"></a>
              </div>
            {{/image}}
          {{/step_2}}

          {{#step_3}}
            {{image_name}}
            <img class="" src="{{resized_image}}" title="{{{image_name}}}" /><br>
            <input type="text" class="hidden" value="{{resized_image}}" name="item_photo">

            Item Name
            <input type="text" placeholder="TV Stand" required="required" name="auction_name">

            Starting Bid
            <div class="row collapse">
              <div class="small-1 columns">
                <span class="prefix">$</span>
              </div>
              <div class="small-11 columns">
                <input type="number" min="1" class="medium-11 columns"  placeholder="10" required="required" name="start_bid">
              </div>
            </div>
            Increments
            <div class="row collapse">
              <div class="small-1 columns">
                <span class="prefix">$</span>
              </div>
              <div class="small-11 columns">
                <input type="number" min="1" class="medium-11 columns" required="required" placeholder="5" name="step">
              </div>
            </div>
            Email
            <input type="email" placeholder="your@email.com" required="required" name="user_email">
            End date <input type="time" name="end_date">
            <input type="submit" class="button postfix" value="Start Auction">
          {{/step_3}}
        </form>
      </div>
    </div>
  {{/auction}}

<script data-main="scripts/main" src="/js/create_auction.min.js"></script>
{{> partials/_footer}}
