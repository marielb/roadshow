{{> partials/_header}}

{{#auction}}
<div class="row">
  <div class="large-6 columns">
	  <img src="/images/{{image_path}}">
	</div>
  <div class="large-6 columns">
	  <div class="panel">
	    <div class="row collapse">
	      <div class="medium-8 small-12 columns">
	        <div class="row">
	          <div class="medium-12 small-6 columns">
	            <h5>{{auction_name}}</h5>
	          </div>
	          <div class="medium-12 small-6 columns">
              ${{^bid_count}}{{start_bid}}{{/bid_count}}{{current_bid}} (+${{step}})
	          </div>
	        </div>
	      </div>
	      <div class="medium-4 small-12 columns">
          {{> partials/_bid_form}}
	      </div>
	    </div>
	  </div>
	</div>
</div>
{{/auction}}

{{> partials/_footer}}
