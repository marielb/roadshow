{{> partials/_header}}

{{#auction}}
<div class="row">
  <div class="large-6 columns">
	  <img src="/images/{{image_path}}">
	</div>
  <div class="large-6 columns">
  	<div data-alert class="alert-box warning round">
		  This auction ends at {{end_date}} 
		  <a href="#" class="close">&times;</a>
		</div>
		<div class="panel">
	    <div class="row collapse">
	      <div class="medium-8 small-12 columns">
	        <div class="row">
	          <div class="medium-12 small-6 columns">
	            <h5>{{auction_name}}</h5>
	          </div>
	          <div class="medium-12 small-6 columns">
              ${{^bid_count}}{{start_bid}}{{/bid_count}}{{current_bid}} (+${{step}})
	          </div>
	        </div>
	      </div>
	      <div class="medium-4 small-12 columns">
        	<a class="button expand" data-reveal-id="confirm-bid"/>Bid</a>
	      </div>
	    </div>
	  </div>
	</div>
</div>
<div id="confirm-bid" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
	<h4>Confirm Bid</h4>
	{{> partials/_bid_form}}
	<a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
{{/auction}}

{{> partials/_footer}}
